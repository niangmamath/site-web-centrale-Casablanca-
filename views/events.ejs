  <main class="container mx-auto p-4">
    <!-- En-tête de la page -->
    <section class="text-center my-20">
        <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 tracking-tight"><%= title %></h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Découvrez nos conférences, ateliers et rencontres à venir.</p>
    </section>

    <!-- Grille des événements -->
    <div class="my-24">
        <div class="space-y-12">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <div id="<%= event._id %>" class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 transition-all duration-300 hover:border-blue-300 hover:shadow-md flex flex-col md:flex-row items-start gap-8 scroll-mt-20">
                        <% if (event.imageUrl) { %>
                            <a href="#<%= event._id %>" class="block w-full md:w-1/3">
                                <img src="<%= event.imageUrl %>" alt="Image pour <%= event.title %>" class="w-full h-64 md:h-auto object-cover rounded-lg">
                            </a>
                        <% } %>
                        <div class="flex flex-col flex-grow w-full md:w-2/3">
                            <a href="#<%= event._id %>" class="block">
                                <h3 class="text-2xl font-bold text-gray-800 mb-2 hover:text-blue-600 transition-colors"><%= event.title %></h3>
                            </a>
                            <div class="text-sm text-gray-500 mb-4 space-y-1">
                                <p><strong>Date:</strong> <%= new Date(event.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                <p><strong>Lieu:</strong> <%= event.location %></p>
                                <% if (event.speaker) { %>
                                    <p><strong>Intervenant:</strong> <%= event.speaker %></p>
                                <% } %>
                            </div>
                            <p class="text-gray-700 mb-4 flex-grow"><%= event.description.substring(0, 150) %>...</p>
                            
                            <!-- Section des boutons -->
                            <div class="mt-auto flex flex-col md:flex-row justify-end items-center">
                                
                                <!-- Boutons de partage sur les réseaux sociaux -->
                                <div class="flex items-center space-x-4">
                                    <span class="text-gray-600 font-semibold">Partagez l'événement :</span>
                                    <% const shareText = `Découvrez cet événement : ${event.title}`; %>
                                    <!-- LinkedIn -->
                                    <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= encodeURIComponent(event.shareUrl) %>&title=<%= encodeURIComponent(event.title) %>&summary=<%= encodeURIComponent(event.description) %>" target="_blank" rel="noopener noreferrer" class="text-blue-700 hover:opacity-80 transition-opacity">
                                       <i class="fab fa-linkedin fa-2x"></i>
                                    </a>
                                    <!-- Twitter -->
                                    <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent(event.shareUrl) %>&text=<%= encodeURIComponent(shareText) %>" target="_blank" rel="noopener noreferrer" class="text-sky-500 hover:opacity-80 transition-opacity">
                                        <i class="fab fa-twitter fa-2x"></i>
                                    </a>
                                    <!-- WhatsApp -->
                                    <a href="https://api.whatsapp.com/send?text=<%= encodeURIComponent(shareText + ' ' + event.shareUrl) %>" target="_blank" rel="noopener noreferrer" class="text-green-500 hover:opacity-80 transition-opacity">
                                        <i class="fab fa-whatsapp fa-2x"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="text-center py-16">
                    <p class="text-xl text-gray-500">Aucun événement à venir pour le moment.</p>
                </div>
            <% } %>
        </div>
    </div>

    <% if (sections && sections.length > 0) { %>
      <% sections.forEach(section => { %>
        <section class="my-24 max-w-5xl mx-auto">
            <h2 class="text-4xl font-bold text-center mb-12 text-gray-800"><%= section.title %></h2>
            <div class="prose lg:prose-xl max-w-none text-gray-700">
                <%- section.content %>
            </div>
        </section>
      <% }) %>
    <% } %>

  </main>
