  <main class="container mx-auto p-4 my-12">
    <div class="flex flex-col lg:flex-row gap-12">

      <!-- Main post content -->
      <div class="lg:w-3/4">
        <article>
          <img src="<%= post.imageUrl %>" alt="Image pour <%= post.title %>" class="rounded-2xl mb-8 w-full object-cover shadow-lg" style="max-height: 500px;">
          <h1 class="text-4xl md:text-5xl font-extrabold mb-4 text-gray-900 tracking-tight"><%= post.title %></h1>
          <p class="text-gray-500 mb-6">Par <%= post.author %> - Le <%= new Date(post.createdAt).toLocaleDateString('fr-FR') %></p>
          <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
            <%- post.content %>
          </div>
        </article>

        <!-- Interaction Section: Likes & Shares -->
        <section class="my-12 border-t border-b py-6">
          <div class="flex justify-between items-center">
            <!-- Like Button -->
            <form action="/blog/<%= post._id %>/like" method="POST" class="flex items-center gap-2">
              <button type="submit" class="flex items-center gap-2 text-gray-600 hover:text-red-500 transition-colors">
                <i class="far fa-heart"></i>
                <span>J'aime</span>
              </button>
              <span class="font-semibold text-gray-700">(<%= post.likes %>)</span>
            </form>
            <!-- Share Buttons -->
            <div class="flex items-center gap-4">
              <span class="text-gray-600 font-semibold">Partager:</span>
              <a href="https://twitter.com/intent/tweet?url=<%= encodeURIComponent(post.shareUrl) %>&text=<%= encodeURIComponent(post.title) %>" target="_blank" class="text-gray-500 hover:text-blue-400">
                <i class="fab fa-twitter fa-lg"></i>
              </a>
              <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(post.shareUrl) %>" target="_blank" class="text-gray-500 hover:text-blue-600">
                <i class="fab fa-facebook fa-lg"></i>
              </a>
              <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= encodeURIComponent(post.shareUrl) %>&title=<%= encodeURIComponent(post.title) %>" target="_blank" class="text-gray-500 hover:text-blue-700">
                <i class="fab fa-linkedin fa-lg"></i>
              </a>
            </div>
          </div>
        </section>

        <!-- Comments Section -->
        <section class="my-12">
          <h2 class="text-3xl font-bold mb-8">Commentaires</h2>

          <!-- New Comment Form -->
          <div class="mb-12">
            <form action="/blog/<%= post._id %>/comment" method="POST" class="bg-white p-6 rounded-lg shadow">
              <h3 class="font-semibold mb-4">Laisser un commentaire</h3>
              <div class="mb-4">
                <label for="user" class="block text-sm font-medium text-gray-700 mb-1">Votre nom</label>
                <input type="text" name="user" id="user" class="w-full border-gray-300 rounded-md shadow-sm" required>
              </div>
              <div class="mb-4">
                <label for="text" class="block text-sm font-medium text-gray-700 mb-1">Votre message</label>
                <textarea name="text" id="text" rows="4" class="w-full border-gray-300 rounded-md shadow-sm" required></textarea>
              </div>
              <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600">Envoyer</button>
            </form>
          </div>

          <!-- Existing Comments -->
          <div class="space-y-8">
            <% if(post.comments && post.comments.length > 0) { %>
              <% post.comments.slice().reverse().forEach(comment => { %>
                <div class="flex gap-4">
                  <div class="bg-gray-200 w-12 h-12 rounded-full flex-shrink-0 flex items-center justify-center">
                    <i class="fas fa-user text-gray-500"></i>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-800"><%= comment.user %></p>
                    <p class="text-gray-500 text-sm mb-2"><%= new Date(comment.createdAt).toLocaleString('fr-FR') %></p>
                    <p class="text-gray-700"><%= comment.text %></p>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-gray-500">Soyez le premier Ã  commenter !</p>
            <% } %>
          </div>
        </section>
      </div>

      <!-- Sidebar with recent posts -->
      <aside class="lg:w-1/4 lg:sticky top-24 self-start">
        <h2 class="text-2xl font-bold mb-6 border-b pb-3">Autres articles</h2>
        <div class="space-y-6">
          <% recentPosts.forEach(recentPost => { %>
            <a href="/blog/<%= recentPost._id %>" class="flex items-center gap-4 group">
              <img src="<%= recentPost.imageUrl %>" alt="" class="w-20 h-20 rounded-lg object-cover flex-shrink-0">
              <div>
                <h3 class="font-semibold text-gray-800 group-hover:text-blue-500 transition-colors"><%= recentPost.title %></h3>
                <p class="text-sm text-gray-500"><%= new Date(recentPost.createdAt).toLocaleDateString('fr-FR') %></p>
              </div>
            </a>
          <% }) %>
        </div>
      </aside>

    </div>
  </main>
