<main class="container mx-auto p-4">
    <section class="text-center my-12">
      <h1 class="text-5xl font-bold text-cyan-400 mb-4">Contactez-Nous</h1>
      <p class="text-xl text-gray-300">Rejoignez la conversation quantique !</p>
    </section>

    <section class="my-12 max-w-lg mx-auto">

      <% if (locals.status === 'success') { %>
        <div class="bg-green-500 text-white p-4 rounded-lg mb-6 text-center">
          Votre message a bien été envoyé ! Nous vous répondrons dès que possible.
        </div>
      <% } %>

      <form action="/contact" method="POST" class="bg-gray-800 p-8 rounded-lg">
        <div class="mb-4">
          <label for="name" class="block text-gray-300 mb-2">Nom</label>
          <input type="text" id="name" name="name" class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-cyan-400" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-300 mb-2">Email</label>
          <input type="email" id="email" name="email" class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-cyan-400" required>
        </div>
        <div class="mb-4">
          <label for="message" class="block text-gray-300 mb-2">Message</label>
          <textarea id="message" name="message" rows="4" class="w-full bg-gray-700 border border-gray-600 rounded-lg py-2 px-4 focus:outline-none focus:ring-2 focus:ring-cyan-400" required></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="bg-cyan-500 hover:bg-cyan-600 text-white font-bold py-3 px-6 rounded-full transition duration-300">Envoyer</button>
        </div>
      </form>
    </section>
  </main>