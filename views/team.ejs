  <main class="container mx-auto p-4">
    <!-- En-tête de la page -->
    <section class="text-center my-20">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 tracking-tight">Notre Équipe</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Les esprits passionnés qui animent Centrale Quanta.</p>
    </section>

    <!-- Grille des membres -->
    <section class="my-24 max-w-5xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <% if (members && members.length > 0) { %>
          <% members.forEach(member => { %>
            <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 text-center transition-all duration-300 hover:border-blue-300 hover:shadow-md flex flex-col">
              <div>
                <img src="<%= member.imageUrl %>" alt="Portrait de <%= member.name %>" class="w-32 h-32 rounded-full mx-auto mb-5 border-4 border-white shadow-md object-cover">
                <h3 class="text-2xl font-bold text-gray-800"><%= member.name %></h3>
                <p class="font-semibold bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-purple-600 mb-3"><%= member.role %></p>
              </div>
              <div class="mt-auto pt-4">
                <% if (member.linkedinUrl) { %>
                  <a href="<%= member.linkedinUrl %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 transition-colors inline-block mr-4">
                    <i class="fab fa-linkedin fa-2x"></i>
                  </a>
                <% } %>
                <a href="/team/<%= member._id %>" class="inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition-colors">Voir plus</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center py-16 col-span-full">
            <p class="text-xl text-gray-500">Aucun membre n'a été ajouté à l'équipe pour le moment.</p>
          </div>
        <% } %>
      </div>
    </section>

    <% sections.forEach(section => { %>
      <section class="my-24 max-w-5xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-12 text-gray-800"><%= section.title %></h2>
          <div class="prose lg:prose-xl max-w-none text-gray-700">
              <%- section.content %>
          </div>
      </section>
    <% }) %>
    
  </main>