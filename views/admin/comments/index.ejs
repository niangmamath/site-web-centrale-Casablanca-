<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= title %></h1>
    <p class="text-gray-600 mb-8">Gérez tous les commentaires de vos articles. Les commentaires non lus sont sur fond blanc.</p>

    <div class="bg-white shadow rounded-lg">
        <div class="divide-y divide-gray-200">
            <% comments.forEach(comment => { %>
                <div class="p-6 <%= !comment.read ? 'bg-blue-50' : '' %>" id="comment-<%= comment._id %>">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <p class="text-sm text-gray-600">
                                <strong class="font-semibold text-gray-900"><%= comment.author %></strong> <!-- CORRIGÉ -->
                                a commenté sur
                                <a href="/blog/<%= comment.postId %>#comment-<%= comment._id %>" class="text-indigo-600 hover:underline"><%= comment.postTitle %></a>
                            </p>
                            <p class="mt-2 text-gray-800"><%= comment.content %></p> <!-- CORRIGÉ -->
                            <p class="mt-2 text-xs text-gray-500">
                                <% 
                                // Gestion sécurisée de la date pour éviter le crash
                                try {
                                    const date = new Date(comment.createdAt); // CORRIGÉ
                                    if (isNaN(date.getTime())) throw new Error('Date invalide');
                                %>
                                    <%= date.toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                                <% } catch (e) { %>
                                    Date invalide
                                <% } %>
                            </p>
                        </div>
                        <div class="flex items-center space-x-3 ml-4">
                            <!-- Formulaire dynamique pour marquer comme lu/non lu -->
                            <form action="<%= locals.adminPath %>/comments/<%= comment._id %>/toggle-read?_csrf=<%= csrfToken %>" method="POST" class="inline-block">
                                <button type="submit" class="px-3 py-2 text-sm font-medium text-white rounded-md <%= comment.read ? 'bg-yellow-500 hover:bg-yellow-600' : 'bg-green-500 hover:bg-green-600' %>">
                                    <i class="fa <%= comment.read ? 'fa-eye-slash' : 'fa-eye' %> mr-1"></i> <!-- CORRIGÉ: Icône dynamique -->
                                    <%= comment.read ? 'Marquer non lu' : 'Marquer comme lu' %> <!-- CORRIGÉ: Texte dynamique -->
                                </button>
                            </form>
                            <!-- Formulaire de suppression -->
                            <form action="<%= locals.adminPath %>/comments/<%= comment._id %>/delete?_csrf=<%= csrfToken %>" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');" class="inline-block">
                                <button type="submit" class="px-3 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-md">
                                    <i class="fa fa-trash mr-1"></i>
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>

            <% if (comments.length === 0) { %>
                <div class="p-6 text-center text-gray-500">
                    <p>Aucun commentaire pour le moment.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
