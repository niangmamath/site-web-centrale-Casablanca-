 <main class="container mx-auto p-4">
    <section class="text-center my-20">
      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 tracking-tight">Blog</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">Actualités, recherches et réflexions de l'équipe Centrale Quanta.</p>
    </section>

    <section class="my-24 max-w-5xl mx-auto">
      <div class="space-y-12">
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(post => { %>
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 transition-all duration-300 hover:border-blue-300 hover:shadow-md flex flex-col md:flex-row items-center gap-8">
                <a href="/blog/<%= post._id %>" class="block md:w-1/3 w-full flex-shrink-0">
                    <img src="<%= post.imageUrl %>" alt="Image pour <%= post.title %>" class="rounded-lg w-full h-48 object-cover">
                </a>
                <div class="md:w-2/3 w-full">
                    <h3 class="text-2xl font-bold text-gray-800 mb-2">
                        <a href="/blog/<%= post._id %>" class="hover:text-blue-500 transition-colors"><%= post.title %></a>
                    </h3>
                    <div class="text-gray-600 mb-4"><%- post.content.replace(/<[^>]*>/g, '').substring(0, 150) %>...</div>
                    <a href="/blog/<%= post._id %>" class="text-blue-500 font-semibold hover:underline">Lire la suite</a>
                </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="text-center py-16">
            <p class="text-xl text-gray-500">Aucun article n'a été publié pour le moment.</p>
          </div>
        <% } %>
      </div>
    </section>
  </main>